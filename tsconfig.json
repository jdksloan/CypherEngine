{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules", "dist", "test"]
}
