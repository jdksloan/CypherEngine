{
  "compilerOptions": {
    "target": "es2019",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "pretty": true,
    "strict": true,
    "inlineSourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./lib",
    "module": "commonJS",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "!node_modules/@types"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
